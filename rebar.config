%% -*- mode: erlang -*-
{cover_enabled, true}.

{erl_opts,
 [
  debug_info,
  warn_export_all,
  warn_obsolete_guard,
  %warn_unused_import, %% This really doesn't work with PropEr
  warn_unused_vars,
  warn_shadow_vars,
  warnings_as_errors
]}.

{clean_files, ["test/*.beam"]}.

{deps, [
    {cowboy, ".*", {git, "https://github.com/extend/cowboy.git", {tag, "1.0.1"}}}
    , {proper, ".*", {git, "https://github.com/manopapad/proper.git", {branch, "master"}}}
    ]}.
